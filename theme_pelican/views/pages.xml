<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>
		<!-- === Página demonstração === -->
		<template name="Demonstração" id="website.demo" page="True">
			<t t-call="website.layout">
				<style type="text/css">
					.featured-icons {
					padding:8px;
					}
					.featured-icons li {
					padding:6px;
					}
				</style>
				<div id="wrap" class="oe_structure oe_empty">
					<section class="s_image_gallery">
						<div class="container" style="padding-top:30px;">
							<div class="row" style="margin:70px 0;">
								<div class="col-md-5">
									<div class="thumbnail">
										<img src="/theme_pelican/static/src/img/icon-trustcode.png"
											alt="Logo Trustcode" />
										<div class="caption" style="padding:30px; text-align:left;">
											<ul>
												<li>
													<h3>Perfeito para suas necessidades</h3>
													<ul class="list-unstyled featured-icons">
														<li>
															<i class="fa fa-paper-plane"></i>
															CRM completo
														</li>
														<li>
															<i class="fa fa-shopping-cart"></i>
															Venda de forma eficiente
														</li>
														<li>
															<i class="fa fa-calendar"></i>
															Calendário e tarefas para gerenciar seu dia
														</li>
														<li>
															<i class="fa fa-barcode"></i>
															Controle total do estoque
														</li>
														<li>
															<i class="fa fa-gears"></i>
															NF-e, *NFS-e (consulte cidades atendidas), Importação XML
														</li>
														<li>
															<i class="fa fa-bank"></i>
															Integração Bancária
														</li>
													</ul>
												</li>
												<li>
													<h3>Não sabe onde começar?</h3>
													<p>
														Veja nosso
														<a href="#">vídeo</a>
														de demonstração para conhecer as funcionalidades.
													</p>
												</li>
												<li>
													<h3>Precisa de mais informações?</h3>
													<p>
														Entre em contato por telefone
														<b>(48) 3771-0507</b>
														, ou e-mail:
														<b><a href="mailto:comercial@trustcode.com.br">comercial@trustcode.com.br</a></b>
													</p>
												</li>
											</ul>
										</div>
									</div>
								</div>
								<div class="col-md-7">
									<header
										style="background-color:#16a085;padding:40px;display:block;color:white;">
										<h2>Acesse a demonstração!</h2>
										<p>Preencha alguns dados para acessar</p>
									</header>
									<section style="background-color:#f5f5f5;padding:40px;">
										<form id="demo-page-contact-form">
											<div class="form-group">
												<label for="">Nome*</label>
												<input id="demo-page-contact-name" name="demo-page-contact-name"
													placeholder="Nome" class="form-control" size="60" type="text"
													required="required" />
											</div>
											<div class="form-group">
												<label for="">E-mail*</label>
												<input id="demo-page-contact-email" name="demo-page-contact-email"
													placeholder="seunome@empresa.com.br" class="form-control"
													size="60" type="email" required="required" />
											</div>
											<div class="form-group">
												<label for="">Área de atuação da empresa*</label>
												<select name="demo-page-contact-company-segment" id="demo-page-contact-company-segment"
													class="form-control" required="required">
													<option value="">Selecione</option>
													<option value="Software e Cloud">Software e Cloud</option>
													<option value="Telecomunicações">Telecomunicações</option>
													<option value="Educação">Educação</option>
													<option value="Agência">Agência</option>
													<option value="Consultoria">Consultoria</option>
													<option value="Veículo de comunicação">Veículo de comunicação</option>
													<option value="Serviços para o consumidor">Serviços para o consumidor</option>
													<option value="Hardware">Hardware</option>
													<option value="Serviços corporativos">Serviços corporativos</option>
													<option value="Turismo e Lazer">Turismo e Lazer</option>
													<option value="Saúde">Saúde</option>
													<option value="Ecommerce">Ecommerce</option>
													<option value="Indústria de manufatura">Indústria de manufatura</option>
													<option value="RH e Recrutamento">RH e Recrutamento</option>
													<option value="Serviços financeiros">Serviços financeiros</option>
													<option value="Jurídico">Jurídico</option>
													<option value="Imóveis">Imóveis</option>
													<option value="Eventos">Eventos</option>
												</select>
											</div>
											<div id="demo-page-alert" class="alert alert-success" style="display:none;">
												<strong>Sucesso!</strong>
												Recebemos seus dados e enviamos um e-mail com os dados de acesso para sua caixa de entrada
											</div>
											<div class="actions">
												<input type="submit" class="btn btn-success" id="demo-page-form-submit"
													value="Enviar dados e acessar demonstração" style="font-size:18px;font-weight:bold;" />
											</div>
											<p style="margin-top:20px; font-size:12px;">
												Estamos comprometidos em resguardar suas informações.
												<br />
												<a href="http://www.trustcode.com.br/page/privacidade/" target="”_blank”">
													Conheça
													nossa Política de Privacidade
												</a>
											</p>
										</form>
									</section>
								</div>
							</div>
							<hr style="margin-bottom:60px;" />
						</div>
					</section>
				</div>
			</t>
		</template>

		<record id="demo_page_link" model="website.menu">
			<field name="name">Demonstração</field>
			<field name="url">/page/demo</field>
			<field name="parent_id" ref="website.main_menu" />
			<field name="sequence" type="int">99</field>
		</record>

	</data>
</openerp>