<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>

		<template id="website_event_trustcode" inherit_id="website_event.index"
			name="TrustCode Event">
			<xpath expr="//div[@id='wrap']" position="before">
				<section class="subpage-banner parallax event-banner text-center"
					data-stellar-background-ratio="0.3" style="background-position: 50% 0px;">
					<div
						style="background-color:rgba(111,111,111,.4); position: absolute;min-height: 287px;float: left;top: -20px;width: 100%;"></div>
					<div class="container">
						<h1 class="site-title">Nossos eventos</h1>
						<p>Confira o que estamos aprontando</p>
					</div>
				</section>
			</xpath>
		</template>

		<template id="website_forum_trustcode" inherit_id="website_forum.header"
			name="TrustCode Forum">
			<xpath expr="//div[@class='container mt16 website_forum']"
				position="before">
				<section class="subpage-banner parallax forum-banner text-center"
					data-stellar-background-ratio="0.3" style="background-position: 50% 0px;">
					<div
						style="background-color:rgba(111,111,111,.4); position: absolute;min-height: 287px;float: left;top: -20px;width: 100%;"></div>
					<div class="container">
						<h1 class="site-title">Confira o fórum</h1>
						<p>Confira o que estamos aprontando</p>
					</div>
				</section>
			</xpath>
		</template>


		<template id="website_sale_trustcode" inherit_id="website_sale.products"
			name="TrustCode Forum">
			<xpath expr="//div[@id='wrap']" position="before">
				<section class="subpage-banner parallax shop-banner text-center"
					data-stellar-background-ratio="0.3" style="background-position: 50% 0px;">
					<div
						style="background-color:rgba(111,111,111,.4); position: absolute;min-height: 287px;float: left;top: -20px;width: 100%;"></div>
					<div class="container">
						<h1 class="site-title">Nossa loja</h1>
						<p>Confira nossas promoções</p>
					</div>
				</section>
			</xpath>
		</template>

		<template id="website_sale_product_trustcode" inherit_id="website_sale.product"
			name="TrustCode Forum">
			<xpath expr="//div[@id='wrap']" position="before">
				<section class="subpage-banner parallax shop-banner text-center"
					data-stellar-background-ratio="0.3" style="background-position: 50% 0px;">
					<div
						style="background-color:rgba(111,111,111,.4); position: absolute;min-height: 287px;float: left;top: -20px;width: 100%;"></div>
					<div class="container">
						<h1 class="site-title">Você vai adorar</h1>
						<p>Confira nossas promoções</p>
					</div>
				</section>
			</xpath>
		</template>

		<template id="website_documentation_trustcode" inherit_id="website_forum_doc.documentation"
			name="TrustCode Documentation">
			<xpath expr="//section[@class='container mt16']" position="before">
				<section class="subpage-banner parallax documentation-banner text-center"
					data-stellar-background-ratio="0.3" style="background-position: 50% 0px;">
					<div
						style="background-color:rgba(111,111,111,.4); position: absolute;min-height: 287px;float: left;top: -20px;width: 100%;"></div>
					<div class="container">
						<h1 class="site-title">Conhecimento</h1>
						<p>Tudo o que você precisa saber sobre o Odoo</p>
					</div>
				</section>
			</xpath>
		</template>

		<template id="website_contactus_trustcode" inherit_id="website.contactus"
			name="TrustCode Contact">
			<xpath expr="//div[@id='wrap']" position="before">
				<style type="text/css">
					#wrap > div.container { margin-top: 40px;}
					#wrap >
					div.container > h1 { display:none;}
				</style>
				<section class="subpage-banner parallax subpage-bg text-center"
					data-stellar-background-ratio="0.3"
					style="background-position: 50% -318px; min-height:536px;">
					<div class="container">
						<h1 class="site-title" style="margin-top:13%;">Contact us</h1>
						<p>Somos uma das empresas mais ativas do Brasil no Odoo</p>
					</div>
				</section>
			</xpath>
		</template>

		<template id="website_login_trustcode" inherit_id="website.login_layout"
			name="TrustCode Login">
			<xpath expr="//div[@class='oe_website_login_container']"
				position="before">
				<style type="text/css">
					main {
					background:url(/theme_trustcode/static/src/images/banner-login.jpg)
					no-repeat}
					main > div { min-height:650px; }
					main > div > form {
					background-color:rgba(111,111,111,.2);
					padding:20px; width:450px;
					border-radius:5px; }
					main button { height:62px;}
				</style>

				<section class="subpage-banner parallax text-center"
					data-stellar-background-ratio="0.3" style="background-position: 50% 0px;">
					<div class="container">
						<h1 class="site-title">Acessar o sistema</h1>
						<p>Trustcode - Liberdade gera criatividade</p>
					</div>
				</section>
			</xpath>
		</template>

		<template id="website_blog_trustcode" inherit_id="website_blog.blog_post_short"
			name="TrustCode Blog">
			<xpath expr="//div[@class='oe_structure']" position="replace">
				<div class="oe_structure subpage-banner parallax subpage-bg text-center"
					data-stellar-background-ratio="0.3" style="background-position: 50% 0px;">
					<section class="mb0">
						<div class="container">
							<div class="row">
								<t t-call="website.pager">
									<t t-set="classname">pull-right</t>
								</t>
								<div class="col-md-12 mb32 mt16 text-center">
									<h1 class="site-title" t-field="blog.name" />
									<h3 t-field="blog.subtitle" />
								</div>
							</div>
						</div>
					</section>
				</div>
			</xpath>
		</template>


