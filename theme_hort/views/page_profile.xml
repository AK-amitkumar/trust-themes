<?xml version="1.0" encoding="utf-8" ?>
<openerp>
	<data>

		<template id="website.perfil" name="Theme Hort Perfil" page="True">

			<t t-call="website.layout">
				<link
					href="http://fontawesome.io/assets/font-awesome/css/font-awesome.css"
					rel="stylesheet" media="screen" />

				<div class="container bootstrap snippet" data-bind="with: user">
					<div class="row">
						<div class="profile-nav col-md-3">
							<div class="panel">
								<div class="user-heading round">
									<a href="#">
										<img data-bind="attr: {src: image}" alt="" />
									</a>
									<h1 data-bind="text: name"></h1>
									<p data-bind="text: email"></p>
								</div>

								<ul id="tab-list-menu" class="nav nav-pills nav-stacked"
									role="tablist">
									<li class="active">
										<a href="#perfil-tab" aria-controls="perfil-tab" role="tab"
											data-toggle="tab">
											<i class="fa fa-user"></i>
											Perfil
										</a>
									</li>
									<li>
										<a href="#atividades-tab" aria-controls="atividades-tab"
											role="tab" data-toggle="tab">
											<i class="fa fa-calendar"></i>
											Atividade Recente
											<span data-bind="text: activities().length" class="label label-success pull-right r-activity"></span>
										</a>
									</li>
									<li>
										<a href="#editar-tab" aria-controls="editar-tab" role="tab"
											data-toggle="tab">
											<i class="fa fa-edit"></i>
											Editar perfil
										</a>
									</li>
									<li>
										<a href="#senha-tab" aria-controls="senha-tab" role="tab"
											data-toggle="tab">
											<i class="fa fa-edit"></i>
											Alterar Senha
										</a>
									</li>
								</ul>
							</div>
						</div>
						<div class="profile-info col-md-9 tab-content">
							<div class="panel" style="display:none;">
								<form>
									<textarea placeholder="Whats in your mind today?"
										rows="2" class="form-control input-lg p-text-area"></textarea>
								</form>
								<footer class="panel-footer">
									<button class="btn btn-success pull-right">Post</button>
									<ul class="nav nav-pills">
										<li>
											<a href="#">
												<i class="fa fa-map-marker"></i>
											</a>
										</li>
										<li>
											<a href="#">
												<i class="fa fa-camera"></i>
											</a>
										</li>
										<li>
											<a href="#">
												<i class=" fa fa-film"></i>
											</a>
										</li>
										<li>
											<a href="#">
												<i class="fa fa-microphone"></i>
											</a>
										</li>
									</ul>
								</footer>
							</div>
							<div role="tabpanel" class="tab-pane active" id="perfil-tab">
								<div class="panel">
									<div class="bio-graph-heading" data-bind="text:comment">
									</div>
									<div class="panel-body bio-graph-info">
										<h1>Bio</h1>
										<div class="row">
											<div class="bio-row">
												<p>
													<span>Nome </span>
													:
													<b data-bind="text: name"></b>
												</p>
											</div>
											<div class="bio-row">
												<p>
													<span>Nascimento</span>
													:
													<b data-bind="text: birthday"></b>
												</p>
											</div>
											<div class="bio-row">
												<p>
													<span>Endereço: </span>
													:
													<b data-bind="text: address"></b>
												</p>
											</div>
											<div class="bio-row">
												<p>
													<span>Número: </span>
													:
													<b data-bind="text: number"></b>
												</p>
											</div>
											<div class="bio-row">
												<p>
													<span>Estado: </span>
													:
													<b data-bind="text: state"></b>
												</p>
											</div>
											<div class="bio-row">
												<p>
													<span>Cidade: </span>
													:
													<b data-bind="text: city"></b>
												</p>
											</div>
											<div class="bio-row">
												<p>
													<span>País </span>
													:
													<b data-bind="text: country"></b>
												</p>
											</div>
											<div class="bio-row">
												<p>
													<span>Ocupação </span>
													:
													<b data-bind="text: occupation"></b>
												</p>
											</div>
											<div class="bio-row">
												<p>
													<span>Telefone </span>
													:
													<b data-bind="text: phone"></b>
												</p>
											</div>
											<div class="bio-row">
												<p>
													<span>Celular </span>
													:
													<b data-bind="text: mobile"></b>
												</p>
											</div>
											<div class="bio-row">
												<p>
													<span>Sexo </span>
													:
													<select data-bind="value: gender" disabled="disabled">
														<option value="0">Masculino</option>
														<option value="1">Feminino</option>
													</select>
												</p>
											</div>
											<div class="bio-row">
												<p>
													<span>Produtor? </span>
													:
													<input type="checkbox" data-bind="checked: supplier"
														disabled="disabled" />
												</p>
											</div>
											<div class="bio-row">
												<p>
													<span>Consumidor? </span>
													:
													<input type="checkbox" data-bind="checked: customer"
														disabled="disabled" />
												</p>
											</div>
											<div class="bio-select">
												<p>
													<span>Interesses </span>
													<select id="tokenize-interesse"
														data-bind="options: available_products, selectedOptions: chosen_interests, optionsText: 'name', optionsValue: 'id'"
														multiple="true" disabled="disabled">
													</select>
												</p>
											</div>
											<div class="bio-select">
												<p>
													<span>Produz </span>
													<select id="tokenize-produz"
														data-bind="options: available_products, selectedOptions: chosen_products, optionsText: 'name', optionsValue: 'id'"
														multiple="true" disabled="disabled">
													</select>
												</p>
											</div>
											<div class="bio-select">
												<p>
													<span>Temas de interesse </span>
													<select id="tokenize-temas"
														data-bind="options: available_categories, selectedOptions: chosen_categories, optionsText: 'name', optionsValue: 'id'"
														multiple="true" disabled="disabled">
													</select>
												</p>
											</div>

										</div>
									</div>
								</div>
								<div>
									<div class="row">
										<div class="col-md-6">
											<div class="panel">
												<div class="panel-body">
													<div class="bio-chart">
														<div style="display:inline;width:100px;height:100px;">
															<canvas width="100" height="100px"></canvas>
															<input class="knob" data-width="100" data-height="100"
																data-displayprevious="true" data-thickness=".2" value="35"
																data-fgcolor="#e06b7d" data-bgcolor="#e8e8e8"
																style="width: 54px; height: 33px; position: absolute; vertical-align: middle; margin-top: 33px; margin-left: -77px; border: 0px; font-weight: bold; font-style: normal; font-variant: normal; font-stretch: normal; font-size: 20px; line-height: normal; font-family: Arial; text-align: center; color: rgb(224, 107, 125); padding: 0px; -webkit-appearance: none; background: none;" />
														</div>
													</div>
													<div class="bio-desk">
														<h4 class="red">Envato Website</h4>
														<p>Started : 15 July</p>
														<p>Deadline : 15 August</p>
													</div>
												</div>
											</div>
										</div>
										<div class="col-md-6">
											<div class="panel">
												<div class="panel-body">
													<div class="bio-chart">
														<div style="display:inline;width:100px;height:100px;">
															<canvas width="100" height="100px"></canvas>
															<input class="knob" data-width="100" data-height="100"
																data-displayprevious="true" data-thickness=".2" value="63"
																data-fgcolor="#4CC5CD" data-bgcolor="#e8e8e8"
																style="width: 54px; height: 33px; position: absolute; vertical-align: middle; margin-top: 33px; margin-left: -77px; border: 0px; font-weight: bold; font-style: normal; font-variant: normal; font-stretch: normal; font-size: 20px; line-height: normal; font-family: Arial; text-align: center; color: rgb(76, 197, 205); padding: 0px; -webkit-appearance: none; background: none;" />
														</div>
													</div>
													<div class="bio-desk">
														<h4 class="terques">ThemeForest CMS </h4>
														<p>Started : 15 July</p>
														<p>Deadline : 15 August</p>
													</div>
												</div>
											</div>
										</div>
										<div class="col-md-6">
											<div class="panel">
												<div class="panel-body">
													<div class="bio-chart">
														<div style="display:inline;width:100px;height:100px;">
															<canvas width="100" height="100px"></canvas>
															<input class="knob" data-width="100" data-height="100"
																data-displayprevious="true" data-thickness=".2" value="75"
																data-fgcolor="#96be4b" data-bgcolor="#e8e8e8"
																style="width: 54px; height: 33px; position: absolute; vertical-align: middle; margin-top: 33px; margin-left: -77px; border: 0px; font-weight: bold; font-style: normal; font-variant: normal; font-stretch: normal; font-size: 20px; line-height: normal; font-family: Arial; text-align: center; color: rgb(150, 190, 75); padding: 0px; -webkit-appearance: none; background: none;" />
														</div>
													</div>
													<div class="bio-desk">
														<h4 class="green">VectorLab Portfolio</h4>
														<p>Started : 15 July</p>
														<p>Deadline : 15 August</p>
													</div>
												</div>
											</div>
										</div>
										<div class="col-md-6">
											<div class="panel">
												<div class="panel-body">
													<div class="bio-chart">
														<div style="display:inline;width:100px;height:100px;">
															<canvas width="100" height="100px"></canvas>
															<input class="knob" data-width="100" data-height="100"
																data-displayprevious="true" data-thickness=".2" value="50"
																data-fgcolor="#cba4db" data-bgcolor="#e8e8e8"
																style="width: 54px; height: 33px; position: absolute; vertical-align: middle; margin-top: 33px; margin-left: -77px; border: 0px; font-weight: bold; font-style: normal; font-variant: normal; font-stretch: normal; font-size: 20px; line-height: normal; font-family: Arial; text-align: center; color: rgb(203, 164, 219); padding: 0px; -webkit-appearance: none; background: none;" />
														</div>
													</div>
													<div class="bio-desk">
														<h4 class="purple">Adobe Muse Template</h4>
														<p>Started : 15 July</p>
														<p>Deadline : 15 August</p>
													</div>
												</div>
											</div>
										</div>
									</div>
								</div>
							</div>

							<div class="panel tab-pane" id="atividades-tab">

								<ul class="list-group" data-bind="foreach: activities">
									<li class="list-group-item">
										<span data-bind="text: date" />
										<span data-bind="text: subtype" class="label label-info" />
										<a data-bind="attr: { href: url }">
											<span data-bind="text: name" />
										</a>
									</li>
								</ul>

							</div>
							<div class="tab-pane panel" id="editar-tab">

								<div class="panel">
									<div class="bio-graph-heading">
										<input class="form-control" data-bind="value: comment" />
									</div>
									<div class="panel-body bio-graph-info">
										<h1>Alterar Perfil</h1>
										<div class="row">
											<div class="bio-row">
												<div class="form-group">
													<label>Nome</label>
													<input class="form-control" data-bind="value: name" />
												</div>
											</div>
											<div class="bio-row">
												<div class="form-group">
													<label>Nascimento (dd-mm-AAAA)</label>
													<input class="form-control" data-bind="value: birthday" />
												</div>
											</div>
											<div class="bio-row">
												<div class="form-group">
													<label>CEP</label>
													<input class="form-control"
														data-bind="value: zip, event: { change: search_zip }" />
												</div>
											</div>
											<div class="bio-row">
												<div class="form-group">
													<label>Endereço</label>
													<input class="form-control" data-bind="value: address" />
												</div>
											</div>
											<div class="bio-row">
												<div class="form-group">
													<label>Número</label>
													<input class="form-control" data-bind="value: number" />
												</div>
											</div>
											<div class="bio-row">
												<div class="form-group">
													<label>Cidade</label>
													<input class="form-control" data-bind="value: city" />
												</div>
											</div>
											<div class="bio-row">
												<div class="form-group">
													<label>Estado</label>
													<input class="form-control" data-bind="value: state" />
												</div>
											</div>
											<div class="bio-row">
												<div class="form-group">
													<label>País</label>
													<input class="form-control" data-bind="value: country" />
												</div>
											</div>
											<div class="bio-row">
												<div class="form-group">
													<label>Ocupação</label>
													<input class="form-control" data-bind="value: occupation" />
												</div>
											</div>
											<div class="bio-row">
												<div class="form-group">
													<label>Telefone</label>
													<input class="form-control" data-bind="value: phone" />
												</div>
											</div>
											<div class="bio-row">
												<div class="form-group">
													<label>Celular</label>
													<input class="form-control" data-bind="value: mobile" />
												</div>
											</div>
											<div class="bio-row">
												<div class="form-group">
													<label>Sexo</label>
													<select class="form-control" data-bind="value: gender">
														<option value="0">Masculino</option>
														<option value="1">Feminino</option>
													</select>
												</div>
											</div>

											<div class="bio-row" style="height:62px;">
												<div class="checkbox">
													<label style="padding-left:0px;">
														Produtor?
														<input type="checkbox" data-bind="checked: supplier"
															style="margin-left:0px;" />
													</label>
												</div>
											</div>

											<div class="bio-row" style="height:62px;">
												<div class="checkbox">
													<label style="padding-left:0px;">
														Consumidor?
														<input type="checkbox" data-bind="checked: customer"
															style="margin-left:0px;" />
													</label>
												</div>
											</div>
											<div class="bio-select">
												<p>
													<span>Interesses </span>
													<select id="tokenize-interesse-editar"
														data-bind="options: available_products, selectedOptions: chosen_interests, optionsText: 'name', optionsValue: 'id'"
														multiple="true">
													</select>
												</p>
											</div>
											<div class="bio-select">
												<p>
													<span>Produz </span>
													<select id="tokenize-produz-editar"
														data-bind="options: available_products, selectedOptions: chosen_products, optionsText: 'name', optionsValue: 'id'"
														multiple="true">
													</select>
												</p>
											</div>
											<div class="bio-select">
												<p>
													<span>Temas de interesse </span>
													<select id="tokenize-temas-editar"
														data-bind="options: available_categories, selectedOptions: chosen_categories, optionsText: 'name', optionsValue: 'id'"
														multiple="true">
													</select>
												</p>
											</div>
											<div class="bio-row">
												<button type="button" class="btn btn-success"
													data-bind="click: salvar_perfil">Salvar</button>
											</div>
										</div>
									</div>
								</div>

							</div>
							<div class="tab-pane panel" id="senha-tab">
								<div class="panel">
									<div class="bio-graph-heading" data-bind="text:comment">
									</div>
									<div class="panel-body bio-graph-info">
										<h1>Alterar senha</h1>
										<div class="row">
											<div class="bio-row" style="width:100%;">
												<div class="form-group">
													<label>Senha Antiga</label>
													<input type="password" class="form-control"
														data-bind="value: old_password" />
												</div>
											</div>
											<div class="bio-row">
												<div class="form-group">
													<label>Nova Senha</label>
													<input type="password" class="form-control"
														data-bind="value: new_password" />
												</div>
											</div>
											<div class="bio-row">
												<div class="form-group">
													<label>Repita a senha</label>
													<input type="password" class="form-control"
														data-bind="value: confirm_password" />
												</div>
											</div>
											<div class="bio-row">
												<button type="button" class="btn btn-success"
													data-bind="click: alterar_senha">Salvar</button>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>


			</t>
		</template>
	</data>
</openerp>